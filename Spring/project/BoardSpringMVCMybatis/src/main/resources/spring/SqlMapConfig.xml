<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!-- MyBatis Query를 위한 Xml에서 resultType, parametertype 으로  
		     사용할  VO 클래스에 대한 별칭 설정 
		  Java AIP에 대한 별칭 설정 정보 : org.apache.ibits.type.TypeAliasRegistry 
		  -->
		  <typeAlias type="com.ssafy.model.dto.Board" alias="board"/>
		  <typeAlias type="com.ssafy.model.dto.BoardFile" alias="boardfile"/>
		  <typeAlias type="com.ssafy.model.dto.Member" alias="member"/>
		  <typeAlias type="com.ssafy.model.dto.PageBean" alias="pagebean"/>
	</typeAliases>
	<mappers>
	<!-- sql 쿼리를 작성한 xml 파일 경로 설정 
	   => 요즘 트랜드가 SqlSessionFactoryBean에 속성정보로 설정한다.
	 -->
	 
	 <mapper resource="spring/Board_query.xml" />
	</mappers>
</configuration>


















